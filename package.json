{
	"name": "mlschool",
	"displayName": "mlschool",
	"description": "Building Machine Learning Systems",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.94.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:mlschool-toc.json"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mlschool.runCommand",
				"title": "Run Command"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mlschoolGuide",
					"title": "Machine Learning School",
					"icon": "resources/icon.png"
				}
			]
		},
		"views": {
			"mlschoolGuide": [
				{
					"id": "mlschoolWebview",
					"type": "webview",
					"name": "Guide",
					"canToggleVisibility": true,
					"visibility": "visible",
					"order": 10
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "mlschool.runCommand",
					"when": "viewItem == hasCommand",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js && npm run copy-html",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production && npm run copy-html",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test",
		"copy-html": "mkdir -p dist && cp src/html/* dist/"
	},
	"devDependencies": {
		"@types/markdown-it": "^14.1.2",
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"@types/vscode": "^1.94.0",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.7.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.13.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"markdown-it": "^14.1.0"
	}
}
