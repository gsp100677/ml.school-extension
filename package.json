{
    "name": "mlschool",
    "displayName": "Building Machine Learning Systems",
    "description": "Building Machine Learning Systems - Table of Contents",
    "publisher": "tideily",
    "version": "1.0.8",
    "repository": "https://github.com/svpino/mlschool-extension",
    "icon": "resources/icon.png",
    "engines": {
        "vscode": "^1.89.1"
    },
	"extensionKind": [
		"ui",
		"workspace"
	],
    "categories": [
        "Other"
    ],
    "activationEvents": [
    ],
	"main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mlschoolGuide",
                    "title": "Machine Learning School",
                    "icon": "resources/icon.png"
                }
            ]
        },
        "views": {
            "mlschoolGuide": [
                {
                    "id": "mlschoolWebview",
                    "type": "webview",
                    "name": "Guide"
                }
            ]
        }
    },
	"enabledApiProposals": [
		"terminalDataWriteEvent",
		"terminalExecuteCommandEvent",
		"terminalShellIntegration"
	],
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js && npm run copy-resources",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production && npm run copy-resources",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test",
        "copy-resources": "mkdir -p dist/resources && cp resources/* dist/resources/"
    },
    "devDependencies": {
        "@types/markdown-it": "^14.1.2",
        "@types/mocha": "^10.0.9",
        "@types/node": "20.x",
        "@types/vscode": "^1.89.1",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "esbuild": "^0.24.0",
        "eslint": "^9.13.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "markdown-it": "^14.1.0"
    },
    "license": "MIT"
}